<%- include('../partials/header') %>


<body>
    <section id="show-page">
        <div id="species3">Species: </div>
        <div><%= plant.species %></div>
        <div id="light3">Light: </div>
        <div><%= plant.light %></div>
        <div id="water3">Water: </div>
        <div><%= plant.watering %></div>
        <div id="pet-friendly3">Pet Friendly: </div>
        <div><%= plant.petFriendly ? 'Yes' : 'No' %></div>
        <div id="notes3">Notes: </div>
        <div><%= plant.notes %></div>
    </section>
    <div id="links">
        <a href="/plants/<%= plant._id %>/edit">Edit Plant</a>
        <form action="<%= plant._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
        </form>
        <a href="/plants">Return to All Plants</a>
    </div>


<%- include('../partials/footer') %>