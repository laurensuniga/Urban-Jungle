<%- include('../partials/header') %>


<body>

    <table id="list">
        <thead>
            <tr>
                <th>Species:</th>
                <th></th>
            </tr>
        </thead>
        <% if(plants) { %>

        <tbody>
            <% plants.forEach(function(m) { %>
            <tr>
                <td><%= m.species %></td>
                <td><a href="/plants/<%= m._id %>">DETAILS</a></td>
            </tr>
            <% }); %>
        </tbody>
        <% } else { %>
        <p><%= 'no plants yet' %></p>
        <% } %>
    </table>
    <% if(user) { %>

    <% if(user._id.equals(user && user._id)) { %>
    <div class="card-action">
        <form action="/plants" method="POST">
            <a href="/plants/new">Add a New Plant</a>
        </form>
    </div>
    <% } %>
    <% } %>
    <div id="login">
        <ul id="logout">
            <li>
                <% if(user) { %>
                <a href="/logout">
                    <i class="material-icons left"></i>Logout</a>
                <% } else { %>
                <a href="/auth/google"><i class="material-icons left"></i>Login with Google</a>
                <% } %>
            </li>
        </ul>
    </div>

    <%- include('../partials/footer') %>